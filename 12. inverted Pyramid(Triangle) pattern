// inverted pyramid/Triangle pattern

*********
 *******
  *****
   ***
    *
------------------------------------------------------------------    
#include <stdio.h>
#include <stdlib.h>
int main(void){
    int i,j,r,space,rows;
    setbuf(stdout, NULL);
    printf("Enter r number for inverted Triangle pattern: ");
    scanf("%d",&rows);
    for(i=rows;i>=1;i--){
    	for(space=1;space<=rows-i;space++){
    		printf(" ");
    	}
    	for(j=1;j<=2*i-1;j++){
    		printf("*");
        }
        printf("\n");
    }
    return 0;
}
