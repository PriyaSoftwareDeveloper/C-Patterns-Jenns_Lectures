// inverted L, column wise ascending number

1 2 3 4 5 6 
1 2 3 4 5 
1 2 3 4 
1 2 3 
1 2 
1 
------------------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>
int main(void){
    int i,j,r;
    setbuf(stdout, NULL);
    printf("Enter r number for inverted L number pattern: ");
    scanf("%d",&r);
    for(i=r;i>=1;i--){
        for(j=1;j<=i;j++){
            printf("%d ", j);
        }
        printf("\n");
    }
    return 0;
}
