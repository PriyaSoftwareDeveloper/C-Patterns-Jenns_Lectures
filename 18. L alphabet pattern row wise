// L alphabet pattern row wise

A 
B B 
C C C 
D D D D 
E E E E E 
-------------------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>
int main(void){
	int i,j,n;
	setbuf(stdout, NULL);
	printf("Enter a number for L alphabet pattern: ");
	scanf("%d", &n);
	for(i=1; i<=n; i++){
		for(j=1; j<=i; j++){
			printf("%c ", 64+i);
		}
		printf("\n");
	}
	return 0;
}
