// inverted L pattern(Star)

* * * * * * 
* * * * * 
* * * * 
* * * 
* * 
* 
-------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>
int main(void){
    int i,j,r;
    setbuf(stdout, NULL);
    printf("Enter r number for inverted L pattern: ");
    scanf("%d",&r);
    for(i=r;i>=1;i--){
        for(j=1;j<=i;j++){
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
