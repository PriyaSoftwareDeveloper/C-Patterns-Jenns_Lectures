// _| pattern, star

     *
    **
   ***
  ****
 *****
******
--------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>
int main(void){
    int i,j,r;
    setbuf(stdout, NULL);
    printf("Enter r number for _| pattern: ");
    scanf("%d",&r);
    for(i=1;i<=r;i++){
        for(j=1;j<=r;j++){
        	if((i+j)<=r)
        		printf(" ");
        	else
        		printf("*");
        }
        printf("\n");
    }
    return 0;
}
