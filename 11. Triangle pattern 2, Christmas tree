// Triangle pattern 2, Christmas tree

    *
   ***
  *****
 *******
*********
--------------------------------------------------------------------
#include <stdio.h>
#include <stdlib.h>
int main(void){
    int i,j,r,space, rows;
    setbuf(stdout, NULL);
    printf("Enter r number for Triangle2 pattern: ");
    scanf("%d",&rows);
    for(i=1;i<=rows;i++){
    	for(space=1;space<=rows-i;space++){
    		printf(" ");
    	}
    	for(j=1;j<=2*i-1;j++){
    		printf("*");
        }
        printf("\n");
    }
    return 0;
}
